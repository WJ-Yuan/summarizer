{
  "name": "summarizer",
  "displayName": "Summarizer",
  "version": "1.1.0",
  "description": "An AI Web Page Summarization Extension",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "dev:inject": "npm run build:inject -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js build:inject",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "build:inject": "vite build --config vite.config.inject.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "format": "prettier --write 'src/**/*.{ts,js,tsx,jsx,scss,css,json}'",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/state": "^6.4.1",
    "@google/generative-ai": "^0.13.0",
    "@html2canvas/html2canvas": "^1.6.2",
    "@lit/react": "^1.0.5",
    "@material/material-color-utilities": "^0.3.0",
    "@material/web": "^1.5.0",
    "@mozilla/readability": "^0.5.0",
    "clipboard": "^2.0.11",
    "codemirror": "^6.0.1",
    "dompurify": "^3.1.5",
    "lottie-react": "^2.4.0",
    "mdui": "^2.1.1",
    "normalize.css": "^8.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "web-ext": "^7.6.2",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.4.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@playwright/test": "^1.33.0",
    "@types/chrome": "^0.0.268",
    "@types/dompurify": "^3.0.5",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.5",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/turndown": "^5.0.5",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@vitejs/plugin-react": "^4.0.0",
    "@webext-core/fake-browser": "^1.3.1",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "jsdom": "^21.1.2",
    "kolorist": "^1.8.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "rimraf": "^4.4.1",
    "sass": "^1.77.6",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "vite": "^4.3.5",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^0.31.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,css,scss,json}": "prettier --write"
  },
  "keywords": [
    "AI",
    "Gemini",
    "Summary",
    "Web page"
  ],
  "engines": {
    "node": ">=18"
  }
}
